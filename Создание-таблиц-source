~~~~~~~~~СОЗДАНИЕ ТАБЛИЦ БАЗЫ "Audio"~~~~~~~~~~~~~~~~~~
USE audio;
CREATE TABLE AUTHOR(
ID int NOT NULL PRIMARY KEY,
name VARCHAR(100),
surname VARCHAR(100),
age INT,
Genre VARCHAR(30),
Language VARCHAR(30),
Place_live VARCHAR(50)

);
CREATE TABLE TRACK(
ID INT NOT NULL PRIMARY KEY,
name VARCHAR(200),
duration TIME,
Genre VARCHAR(20),
ALBUM_ID INT,
AUTHOR_ID INT NOT NULL PRIMARY KEY,
Size DECIMAL(8,1),
Date_add DATE

);
CREATE TABLE ALBUM(
ID INT NOT NULL PRIMARY KEY,
album_name VARCHAR(30),
AUTHOR_ID INT NOT NULL PRIMARY KEY,
DATE_CREATE DATE 

);
CREATE TABLE FAVORITE_MUSIC(
ID INT NOT NULL PRIMARY KEY,
USER_ID INT,
TRACK_ID INT NOT NULL PRIMARY KEY,
TRACK_AUTHOR_ID INT
);
CREATE TABLE USER(
ID INT NOT NULL PRIMARY KEY,
username VARCHAR(100) UNIQUE,
password VARCHAR(30),
email VARCHAR(30) UNIQUE,
Country VARCHAR(30)

);
